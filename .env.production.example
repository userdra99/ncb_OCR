# Production Environment Configuration
# Copy this file to .env.production and fill in actual values

# =============================================================================
# APPLICATION
# =============================================================================
APP_ENV=production
APP_DEBUG=false
LOG_LEVEL=WARNING
LOG_FORMAT=json

# =============================================================================
# GMAIL API
# =============================================================================
GMAIL_CREDENTIALS_PATH=/app/secrets/gmail_credentials.json
GMAIL_TOKEN_PATH=/app/secrets/gmail_token.json
GMAIL_INBOX_LABEL=INBOX
GMAIL_PROCESSED_LABEL=Claims/Processed
GMAIL_POLL_INTERVAL=30
GMAIL_MAX_ATTACHMENT_SIZE_MB=25

# =============================================================================
# NCB API
# =============================================================================
NCB_API_BASE_URL=https://ncb.internal.company.com/api/v1
NCB_API_KEY=REPLACE_WITH_PRODUCTION_API_KEY
NCB_TIMEOUT=30
NCB_MAX_RETRIES=3

# =============================================================================
# GOOGLE SHEETS
# =============================================================================
SHEETS_CREDENTIALS_PATH=/app/secrets/sheets_credentials.json
SHEETS_SPREADSHEET_ID=REPLACE_WITH_PRODUCTION_SPREADSHEET_ID

# =============================================================================
# GOOGLE DRIVE
# =============================================================================
DRIVE_CREDENTIALS_PATH=/app/secrets/drive_credentials.json
DRIVE_FOLDER_ID=REPLACE_WITH_PRODUCTION_FOLDER_ID

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_OCR_QUEUE=claims:ocr_queue
REDIS_SUBMISSION_QUEUE=claims:submission_queue
REDIS_EXCEPTION_QUEUE=claims:exception_queue

# =============================================================================
# OCR
# =============================================================================
OCR_USE_GPU=true
OCR_DEFAULT_LANGUAGE=en
OCR_DETECTION_THRESHOLD=0.5
OCR_RECOGNITION_THRESHOLD=0.5
OCR_HIGH_CONFIDENCE_THRESHOLD=0.90
OCR_MEDIUM_CONFIDENCE_THRESHOLD=0.75
OCR_BATCH_SIZE=8
OCR_MAX_IMAGE_SIZE=4096

# =============================================================================
# ADMIN
# =============================================================================
ADMIN_API_KEY=REPLACE_WITH_SECURE_ADMIN_KEY
ADMIN_PORT=8080
ADMIN_CORS_ORIGINS=https://claims.company.com

# =============================================================================
# ALERTS
# =============================================================================
ALERTS_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=alerts@company.com
SMTP_PASSWORD=REPLACE_WITH_SMTP_PASSWORD
SMTP_FROM_EMAIL=alerts@company.com
ALERT_RECIPIENTS=ops@company.com,manager@company.com

# =============================================================================
# MONITORING
# =============================================================================
METRICS_ENABLED=true
METRICS_PORT=9090

# Optional: Sentry for error tracking
# SENTRY_DSN=https://xxx@sentry.io/xxx

# =============================================================================
# STORAGE
# =============================================================================
TEMP_STORAGE_PATH=/app/data/temp
TEMP_FILE_MAX_AGE_HOURS=24
